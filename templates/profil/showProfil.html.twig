{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Profil{% endblock %}

{% block body %}
    <section class="container-fluid my-5 min-vh-100">
        {% if user %}
        <h1 class="text-center mb-5 mt-5">{{ user.username }}</h1>
        <div class="d-flex justify-content-center align-items-center">
            <article class="col-md-3 col-12">
                {% if user.pictureFileName %}
                <img class="col-12" src="{{ asset('img/profile/small/'~user.pictureFileName ) }}">
                {% else %}
                <img class="col-12" src="https://zupimages.net/up/21/14/2yq6.jpg">
                {% endif %}
            </article>
            <article class="col-md-6 col-12">
                <div class="d-flex justify-content-center text-center mb-5">
                    <span class="col-5">Prénom :</span><span class="col-5">{{ user.lastName }}</span>
                </div>
                <div class="d-flex justify-content-center text-center mb-5">
                    <span class="col-5">Nom :</span><span class="col-5">{{ user.firstName }}</span>
                </div>
                <div class="d-flex justify-content-center text-center mb-5">
                    <span class="col-5">Téléphone :</span><span class="col-5">{{ user.phone }}</span>
                </div>
                <div class="d-flex justify-content-center text-center mb-5">
                    <span class="col-5">Email :</span><span class="col-5">{{ user.email }}</span>
                </div>
                <div class="d-flex justify-content-center text-center mb-5">
                    <span class="col-5">Campus :</span><span class="col-5">{{ user.campus.name }}</span>
                </div>
                <div class="d-flex justify-content-around text-center mb-5 col-12">
                    <a class="btn btn-blue-light col-4" href="{{ path('main_home') }}">Retour</a>
                    {% if user == app.user %}
                    <a class="btn btn-blue-light col-4" href="{{ path('profil_updatedProfil') }}">Modifier</a>
                    {% endif %}
                </div>
            </article>
        </div>
        {% else %}
            <article id="no-profil" class="text-center col-12">
                <div class="my-5">Il n'y a pas de profil par ici !</div>
                <a class="btn btn-blue-light col-5" href="{{ path('main_home') }}">Retour à la page d'accueil</a>
            </article>
        {% endif %}
    </section>
{% endblock %}