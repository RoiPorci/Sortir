{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Sortir{% endblock %}

{% block body %}
    <div class="container-fluid bg-dark">
        <div class="container mb-2">
            <div class="row justify-content-end text-end text-blue-light mx-2">
                    <p class=""><i class="bi bi-calendar-event"></i> {{ "now"|date("d/m/Y") }}</p>
                    <p class=""><i class="fas fa-user-circle"></i> {{ app.user.username }}</p>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-light">
        <div class="container my-2">
            <h3 class="mb-3">Filtrer les sorties</h3>
            <form>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="row mb-2">
                            <label for="campusInput" class="col-sm-2 col-form-label">Campus</label>
                            <div class="col-sm-10">
                                <select class="form-select" id="campusInput" name="campus">

                                </select>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="nameInput" class="col-sm-2 col-form-label">Nom</label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" class="form-control" id="nameInput" name="name">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="startDateInput" class="col-sm-1 col-form-label">Entre</label>
                            <div class="col-sm-5">
                                <div class="input-group">
                                    <input type="date" class="form-control" id="startDateInput" name="startDate">
                                </div>
                            </div>

                            <label for="endDateInput" class="col-sm-1 col-form-label">et</label>
                            <div class="col-sm-5">
                                <div class="input-group">
                                    <input type="date" class="form-control" id="endDateInput" name="endDate">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="ckOrginaser" name="ckOrginaser">
                            <label class="form-check-label" for="ckOrginaser">
                                Sorties dont je suis l'organisateur/trice
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="ckRegistered" name="ckRegistered">
                            <label class="form-check-label" for="ckRegistered">
                                Sorties auxquelles je suis inscrit/e
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="ckNotRegistered" name="ckNotRegistered">
                            <label class="form-check-label" for="ckNotRegistered">
                                Sorties auxquelles je ne suis pas inscrit/e
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="ckPast" name="ckPast">
                            <label class="form-check-label" for="ckPast">
                                Sorties pass√©es
                            </label>
                        </div>
                    </div>

                    <div class="col-sm-2 row my-2 align-items-center">
                        <button class="btn btn-lg btn-blue-light" type="submit">Rechercher</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
